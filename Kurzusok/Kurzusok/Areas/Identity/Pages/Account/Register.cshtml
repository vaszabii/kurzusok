@page "/Register"
@model RegisterModel
@{
    
    ViewData["Title"] = "Regisztrálás";
}

<h1 class="mb-6">Regisztrálás</h1>
<form asp-route-returnUrl="@Model.ReturnUrl" class="form-signin" method="post">
    <h4>Új fiók létrehozása.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.UserName">Felhasználó név</label>
        <input asp-for="Input.UserName" class="form-control" />
        <span asp-validation-for="Input.UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Email">Email cím</label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Password">Jelszó</label>
        <input asp-for="Input.Password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.ConfirmPassword">Jelszó megerősítése</label>
        <input asp-for="Input.ConfirmPassword" class="form-control" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-lg btn-primary btn-block">Regisztrálás</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
