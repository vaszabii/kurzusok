@model IEnumerable<Kurzusok.Models.Subjects>

@{
    ViewData["Title"] = "Kurzusok";
}

<h1>Kurzusok</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Új hozzáadása</a>
    <a class="btn btn-primary" asp-action="SearchForm">Keresés</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GyHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubjectCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GyHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectCode)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
