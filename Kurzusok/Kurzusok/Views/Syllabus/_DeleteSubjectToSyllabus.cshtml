<div class="modal fade subjectdeletemodal" id="applySubjectDelete" tabindex="-1" role="dialog" aria-labelledby="applySubjectDelete" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form asp-action="DeleteSubjectSyllabusPost" onsubmit="return ajaxpostBasic(this);">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="applySubjectDeleteLabel">Tárgy törlése a mintatantervből</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Biztosan törölni szeretnéd ezt a tárgyat a mintatantervből?
                    <input type="hidden" name="id" value="@Model">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Bezárás</button>
                    <div class="form-group">
                        <input type="submit" value="Tárgy törlése" class="btn btn-primary"  id="delete" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}