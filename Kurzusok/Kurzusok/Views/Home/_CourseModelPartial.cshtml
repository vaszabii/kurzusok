@model Subjects

<div class="modal fade" id="addSubject" >
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addSubjectLabel">Kurzus hozzáadása</h4>
                <button type="button" class="close" data-dismiss="modal"><span>X</span></button>
            </div>
            <div class="modal-body" >
                <form action="Create">
                    <div class="form-group">
                        <label asp-for="SubjectCode"></label>
                        <input asp-for="SubjectCode" class="form-control" />
                        <span asp-validation-for="SubjectCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Bezárás</button>
                <button type="button" class="btn btn-primary" data-save="modal">Mentés</button>
            </div>
        </div>
    </div>
</div>
