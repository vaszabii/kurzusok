                            }
                        </td>
                        <td>
                            <a class="btn btn-xs" data-toggle="add-comment-modal" data-target="#applyComment" data-id="@course.CourseId"><span class="far fa-comment" aria-hidden="true"></span></a>
                            @if (User.IsInRole("Admin"))
                            {
                                <button class="btn btn-default btn-xs" data-toggle="subject-modal" data-target="#editCourse" id="editecourse" data-url="@Url.Action("EditCourse")" data-id="@course.CourseId">
                                    <span class="far fa-edit" aria-hidden="true"></span>
                                </button>
                                <a class="btn btn-xs" data-toggle="course-delete-modal" data-target="#applyCourseDelete" data-id="@course.CourseId" id="deletecourse"><span class="fas fa-trash-alt"></span></a>
                            }
                        </td>

                    }
                </tr>
                @foreach (var course in item.Courses.Skip(1))
                {
                    <tr class="border-bottom">
                        <td class="border-left">
                            @Html.DisplayFor(modelItem => course.CourseCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => course.CourseType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => course.Members)
                            @Html.Raw("fő")
                        </td>
                        <td>
                            @if (course.Classroom != null)
                            {
                                @Html.DisplayFor(modelItem => course.Classroom)
                                if (course.Software != null)
                                {
                                    @Html.Raw(", ")
                                    @Html.DisplayFor(modelItem => course.Software)
                                }
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => course.Software)
                            }
                        </td>
                        <td>
                            <table>
                                <tr>
                                    <td class="border-0 py-0 maxwidth">
                                        @{displayComment = course.Comment;
                                            if (displayComment != null)
                                            {
                                                while (displayComment.Contains("$]]"))
                                                {
                                                    commentHelper = displayComment.Substring(0, displayComment.IndexOf("$]]") + 3);
                                                    int pos = displayComment.IndexOf(commentHelper);
                                                    displayComment = displayComment.Substring(0, pos) + "" + displayComment.Substring(pos + commentHelper.Length);
                                                    commentHelper = commentHelper.Substring(3, commentHelper.IndexOf("$]]") - 3);
                                                    whoCommented.Add(commentHelper);
                                                }
                                                string[] commentList = displayComment.Split('ß');
                                                whoCommented.Reverse();
                                                <div>
                                                    @{
                                                        for (int i = 0; i < commentList.Length; i++)
                                                        {
                                                            <p class="d-inline" style="word-wrap:break-word;" title="írta: @whoCommented[i]">@commentList[i]</p>
                                                        }
                                                    }
                                                </div>
                                            }
                                        }
                                    </td>
                                </tr>
                                @if (displayComment != null)
                                {
                                    <tr>
                                        <td class="border-0 py-0">
                                            <p class="smaller m-0">Utoljára szerkesztette: @whoCommented.Last()</p>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </td>
                        <td>
                            @foreach (var teacher in course.TeachersLink)
                            {
                                @Html.DisplayFor(modelItem => teacher.Teacher.Name)
                                <br />
                            }
                        </td>
                        <td>
                            @foreach (var teacher in course.TeachersLink)
                            {
                                @Html.DisplayFor(modelItem => teacher.Loads)
                                @Html.Raw(" %")
                                <br />
                            }
                        </td>
                        <td>
                            <a class="btn btn-xs" data-toggle="add-comment-modal" data-target="#applyComment" data-id="@course.CourseId"><span class="far fa-comment" aria-hidden="true"></span></a>
                            @if (User.IsInRole("Admin"))
                            {
                                <button class="btn btn-default btn-xs" data-toggle="subject-modal" data-target="#editCourse" id="editecourse" data-url="@Url.Action("EditCourse")" data-id="@course.CourseId">
                                    <span class="far fa-edit" aria-hidden="true"></span>
                                </button>
                                <a class="btn btn-xs" data-toggle="course-delete-modal" data-target="#applyCourseDelete" data-id="@course.CourseId" id="deletecourse"><span class="fas fa-trash-alt"></span></a>
                            }
                        </td>

                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@section SideBar{
    <div class="sidebar" id="SideBar" onmouseover="openBar()" onmouseout="delay()">
        <ul class="nav nav-sidebar justify-content-center" id="opened">
            <li class="nav-item pb-1 height">
                <form asp-area="" asp-controller="Home" asp-action="AnySearch" id="anysearchform">
                    <input type="text" name="anysearch" class="form-control" placeholder="Keresés" />
                </form>
            </li>
            <li class="nav-item pb-1 height">
                @if (Model.SemestersList.Count > 1)
                {
                    <a class="nav-link text-dark dropdown-toggle pl-1 py-0 d-inline" id="dropdownMenuSemester" data-toggle="dropdown">
                        @date
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink" role="menu">
                        @foreach (var item in Model.SemestersList)
                        {
                            if (date != item.Date)
                            {
                                string temptrain = "Nappali";
                                if (training == "Levelezős")
                                {
                                    temptrain = "Levelezos";
                                }
                                <a class="text-dark nav-link" role="menuitem" tabindex="-1" asp-route-currentSemesterId="@item.Id" asp-route-training="@temptrain" onclick="clearCollapse()">@item.Date</a>
                            }
                        }
                    </div>
                }
                else
                {
                    <p class="text-dark pl-1 py-0 d-inline">
                        @date
                    </p>
                }

            </li>
            <li class="nav-item pb-1 height">
                <a class="nav-link text-dark dropdown-toggle pl-1 py-0 d-inline text-nowrap" id="dropdownMenuTraining" data-toggle="dropdown">
                    @training tagozat
                </a>
                <div class="dropdown-menu p-0 w-75 text-center" aria-labelledby="dropdownMenuTraining" role="menu">
                    @if (training == "Nappali")
                    {
                        <a class="text-dark nav-link text-nowrap px-0" role="menuitem" tabindex="-1" asp-route-currentSemesterId="@id" asp-route-training="Levelezos" onclick="clearCollapse()">Váltás Levelezőre</a>
                    }
                    else
                    {
                        <a class="text-dark nav-link text-nowrap  px-0" role="menuitem" tabindex="-1" asp-route-currentSemesterId="@id" asp-route-training="Nappali" onclick="clearCollapse()">Váltás nappalira</a>
                    }
                </div>
            </li>
            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item pb-1 height">
                    <a class="nav-link text-dark pl-1 py-0 d-inline text-nowrap" data-toggle="modal" data-target="#addSemester" onclick="clearCollapse()">Új félév felvétele</a>
                </li>
            }
            <li class="nav-item pt-2 pl-1 changetable">
                <div class="custom-control custom-switch text-nowrap">
                    <input type="checkbox" class="custom-control-input pl-1" id="tableView" onclick="changeTable()">
                    <label class="custom-control-label text-dark" for="tableView">Táblázatos nézet</label>
                </div>
            </li>
        </ul>
        <ul class="nav nav-sidebar" id="closed">
            <li class="nav-item pb-1">
                <i class="fas fa-search"></i>
            </li>
            <li class="nav-item pb-1">
                <i class="fas fa-list-ul"></i>
            </li>
            <li class="nav-item pb-1">
                <i class="fas fa-exchange-alt"></i>
            </li>
            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item pb-1">
                    <i class="fas fa-plus-square"></i>
                </li>
            }
            <li class="nav-item pb-1 changetable">
                <i class="fas fa-table"></i>
            </li>
        </ul>
    </div>
}

