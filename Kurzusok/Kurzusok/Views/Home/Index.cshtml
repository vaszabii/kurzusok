        @if (allTypeCheckForSubjects[item.i].Count() != 0)
        {
            errormessage = "A tárgyhoz még fel kell venni a következő típusú kurzusokat: ";
            foreach (var a in allTypeCheckForSubjects[item.i])
            {
                errormessage = errormessage + a + ", ";
            }
            errormessage = errormessage.Remove(errormessage.Length - 2, 2);
        }

