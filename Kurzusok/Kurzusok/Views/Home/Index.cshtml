                            {
                                <strong>Óraszám/félév: </strong>
                                @Html.DisplayFor(modelItem => item.value.CorrespondHours)
                            }
                            else
                            {
                                @if (item.value.EHours != null)
                                {
                                    <strong>Elméleti órák/hét: </strong>
                                    @Html.DisplayFor(modelItem => item.value.EHours)
                                    <br />
                                }
                                @if (item.value.GyHours != null)
                                {
                                    <strong>Gyakorlati órák/hét: </strong>
                                    @Html.DisplayFor(modelItem => item.value.GyHours)
