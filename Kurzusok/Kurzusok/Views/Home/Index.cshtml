@*Add semester*@
<div class="modal fade" id="addSemester" tabindex="-1" role="dialog" aria-labelledby="addSemester" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addSemesterLabel">Új szemeszter felvétele</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-controller="Home" asp-action="CreateSemester" enctype="multipart/form-data">
                @if (Model.SemestersList.Count >= 2)
                {
                    <div class="modal-body">
                        <label for="week">Adja meg hány hét van az adott félévben!</label>
                        <input type="number" min="0" max="30" autofocus name="week" id="week" required />
                        <input type="hidden" name="lastSemester" value="@lastSemester" />
                        <br />
                        Szeretné hozzáadni az 1 évvel korábbi tantárgyakat az új szemeszterthez?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Mégse</button>
                        <button class="btn btn-danger" name="withSubjects" value="0">Nem</button>
                        <button class="btn btn-primary" name="withSubjects" value="1">Igen</button>
                    </div>
                }
                else
                {
                    <div class="modal-body">
                        <label for="week">Adja meg hány hét van az adott félévben!</label>
                        <input type="number" min="0" max="30" autofocus name="week" id="week" required />
                        <input type="hidden" name="lastSemester" value="@lastSemester" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Mégse</button>
                        <button class="btn btn-danger" name="withSubjects" value="0">Hozzáadás</button>
                    </div>
                }

            </form>
        </div>
    </div>
</div>

@*Collapse table*@
<div class="container-fluid pt-2" id="dropdownTable">
    @foreach (var item in Model.CurrentSemester.Subjects)
    {
        <div class="container-fluid border border border-secondary rounded-top mt-1 shadow-sm bg-white rounded w-85 w-d1">
            <div class="row border-bottom border-light rounded-top align-items-center p-1" data-toggle="collapse" data-target="#@item.SubjectCode">
                <div class="col-4 m-0 h5 border-right">  @Html.DisplayFor(modelItem => item.SubjectCode)</div>
                @if (User.IsInRole("Admin"))
                {
                    <div class="col-6 m-0 h5 border-right"> @Html.DisplayFor(modelItem => item.Name)</div>
                    <div class="col-1 m-0 h5 border-right p-0 no-collapsable" id="options">
                        <button type="button" class="btn btn-default btn-xs py-0 col-6 no-collapsable" data-toggle="subject-modal" data-target="#editSubject" id="editesubject" data-url="@Url.Action("EditSubject")" data-id="@item.SubjectId">
                            <span class="far fa-edit"></span>
                        </button>
                        <a class="btn btn-xs py-0 col-6 no-collapsable" data-toggle="subject-delete-modal" data-target="#applySubjectDelete" data-id="@item.SubjectId" id="deletesubject"><span class="fas fa-trash-alt"></span></a>
                    </div>
                    <div class="col-1 text-center m-0 h5"><span class="fas fa-chevron-down" id="chevronIcon"></span></div>
                }
                else
                {
                    <div class="col-6 m-0 h5"> @Html.DisplayFor(modelItem => item.Name)</div>
                    <div class="col-1 m-0 h5 p-0" id="options"></div>
                    <div class="col-1 text-center m-0 h5 border-left"><span class="fas fa-chevron-down" id="chevronIcon"></span></div>
                }
            </div>
        </div>
        <div class="container-fluid collapse pt-0 px-3 pb-3 m-auto bg-light w-80 w-d2 allcollapse" id="@item.SubjectCode">
            <div class="row align-items-center flex-grow-1 p-2">
                <div class="col-md-4 d-flex flex-column">
                    <div class="align-items-center m-auto flex-grow-1 mt-lg-1">

                        <div>
                            @if (training == "Levelezős")
                            {
                                <strong>Óraszám/félév: </strong>
                                @Html.DisplayFor(modelItem => item.CorrespondHours)
                            }
                            else
                            {
                                @if (item.EHours != null)
                                {
                                    <strong>Elméleti órák/hét: </strong>
                                    @Html.DisplayFor(modelItem => item.EHours)
                                    <br />
                                }
                                @if (item.GyHours != null)
                                {
                                    <strong>Gyakorlati órák/hét: </strong>
                                    @Html.DisplayFor(modelItem => item.GyHours)
                                    <br />
                                }
                                @if (item.LHours != null)
                                {
                                    <strong>Labor órák/hét: </strong>
                                    @Html.DisplayFor(modelItem => item.LHours)
                                    <br />
                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-2 d-flex flex-column">
                    <div class="align-items-center d-flex m-auto flex-grow-1 mt-lg-1">
                        <div>
                            @if (item.EducationType == "traditional")
                            {
                                <strong>Jelenléti oktatás</strong>
                            }
                            else if (item.EducationType == "sync")
                            {
                                <strong>Szinkron oktatás</strong>
                            }
                            else if (item.EducationType == "async")
                            {
                                <strong>Asszinkron oktatás</strong>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-6 d-flex flex-column">
                    <div class="align-items-center d-flex m-auto flex-grow-1 mt-lg-1">
                        <div class="pr-lg-2">
                            <strong>Szakok:</strong>
                        </div>
                        <ul class="m-0">
                            @foreach (var programme in item.ProgrammesLink)
                            {
                                <li class="text-left">
                                    <i>@programme.Programme.Name</i>
                                    @if (programme.Obligatory == true)
                                    {
                                        @Html.Raw(", ")
                                        <u>kötelező</u>
                                    }
                                    else
                                    {
                                        @Html.Raw(", ")
                                        <u>választható</u>
                                    }
                                    <br />
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-12 text-center mt-1">
                <div class="table-responsive">
                    <table class="table bg-white">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">
                                    Kurzus típus
                                </th>
                                <th scope="col">
                                    Oktató
                                </th>
                                <th scope="col">
                                    Terhelés
                                </th>
                                <th scope="col">
                                    Kurzus kód
                                </th>
                                @if (training == "Nappali")
                                {
                                    <th scope="col">
                                        Óraszám
                                    </th>
                                }
                                <th scope="col">
                                    Terem, szoftver igény
                                </th>
                                <th scope="col">
                                    Létszám
                                </th>
                                @if (User.IsInRole("Admin"))
                                {
                                    <th>
                                        <button type="button" class="btn btn-secondary" data-toggle="subject-modal" data-target="#addCourse" data-url="@Url.Action("CreateCourse")" data-id="@item.SubjectId">
                                            <span class="fa  fa-plus"></span>
                                        </button>

                                    </th>
                                }
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var course in item.Courses)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => course.CourseType)
                                    </td>
                                    <td>
                                        @foreach (var teacher in course.TeachersLink)
                                        {
                                            @Html.DisplayFor(modelItem => teacher.Teacher.Name)
                                            <br />
                                        }
                                    </td>
                                    <td>
                                        @foreach (var teacher in course.TeachersLink)
                                        {
                                            @Html.DisplayFor(modelItem => teacher.Loads)
                                            @Html.Raw(" %")
                                            <br />
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => course.CourseCode)
                                    </td>
                                    @if (training == "Nappali")
                                    {
                                        <td>
                                            @Html.DisplayFor(modelItem => course.Hours)
                                        </td>
                                    }
                                    <td>
                                        @if (course.Classroom != null)
                                        {
                                            @Html.DisplayFor(modelItem => course.Classroom)
                                            if (course.Software != null)
                                            {
                                                @Html.Raw(", ")
                                                @Html.DisplayFor(modelItem => course.Software)
                                            }
                                        }
                                        else
                                        {
                                            @Html.DisplayFor(modelItem => course.Software)
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => course.Members)
                                        @Html.Raw("fő")
                                    </td>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <td>
                                            <button class="btn btn-default btn-xs" data-toggle="subject-modal" data-target="#editCourse" id="editecourse" data-url="@Url.Action("EditCourse")" data-id="@course.CourseId">
                                                <span class="far fa-edit" aria-hidden="true"></span>
                                            </button>
                                            <a class="btn btn-danger" data-toggle="course-delete-modal" data-target="#applyCourseDelete" data-id="@course.CourseId" id="deletecourse"><span class="fas fa-trash-alt"></span></a>
                                        </td>
                                    }
                                </tr>
                                <tr>
                                    @if (User.IsInRole("Admin") && training == "Nappali")
                                    {
                                        colthespan = 7;
                                    }
                                    <td colspan="@colthespan" class="text-left">
                                        @{displayComment = course.Comment;
                                            if (displayComment != null)
                                            {
                                                while (displayComment.Contains("$]]"))
                                                {
                                                    commentHelper = displayComment.Substring(0, displayComment.IndexOf("$]]") + 3);
                                                    int pos = displayComment.IndexOf(commentHelper);
                                                    displayComment = displayComment.Substring(0, pos) + "" + displayComment.Substring(pos + commentHelper.Length);
                                                    commentHelper = commentHelper.Substring(3, commentHelper.IndexOf("$]]") - 3);
                                                    whoCommented.Add(commentHelper);
                                                }
                                                string[] commentList = displayComment.Split('ß');
                                                whoCommented.Reverse();
                                                @Html.Raw("Megjegyzések:")
                                                <div class="d-inline-block">
                                                    @{
                                                        for (int i = 0; i < commentList.Length; i++)
                                                        {
                                                            <p class="d-inline-block" title="írta: @whoCommented[i]">@commentList[i]</p>
                                                        }
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                @Html.Raw("Megjegyzések:")
                                            }
                                        }
                                    </td>
                                    <td>
                                        <a class="btn btn-xs" data-toggle="add-comment-modal" data-target="#applyComment" data-id="@course.CourseId"><span class="far fa-comment" aria-hidden="true"></span></a>
                                        @if (displayComment != null)
                                        {
                                            <p class="h6 small mb-0">Utoljára szerkesztette:</p>
                                            <p class="h6 small">@whoCommented.Last()</p>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

