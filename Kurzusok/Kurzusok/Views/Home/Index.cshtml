@model Kurzusok.ViewModels.HomeViewModel
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Kurzusok";
    List<List<string>> allTypeCheckForSubjects = ViewBag.allTypeCheckForSubjects;
    string date = Model.CurrentSemester.Date;
    string id = Model.CurrentSemester.Id.ToString();
    string training = Context.Session.GetString("Training");
    if (string.IsNullOrEmpty(training))
    {
        training = "Nappali";
        Context.Session.SetString("Training", "Nappali");
    }
    else if (training == "Levelezos")
    {
        training = "Levelezős";
    }
    int colthespan = 0;
    int colthespanexcel = 0;
    if (User.IsInRole("Admin"))
    {
        colthespanexcel = 11;
        colthespan = 7;
    }
    else
    {
        colthespan = 6;
        colthespanexcel = 10;
    }
    List<string> whoCommented = new List<string>();
    string commentHelper, displayComment;

}

@*Félév törlés, tábla nyitás*@
<div class="container-fluid overflow-hidden">
    <h1>@date félév</h1>
    <h3>@training tagozat</h3>
    @if (User.IsInRole("Admin"))
    {
        @if (Model.SemestersList.Count > 1)
        {
            <button type="button" class="btn btn-danger" data-toggle="home-modal" data-target="#applySemesterDelete" id="semesterdelete" data-url="@Url.Action("DeleteSemester")" data-id="@id">Félév törlése</button>
        }
        <button type="button" class="btn btn-primary" data-toggle="home-modal" data-target="#addSubject" id="createsubject" data-url="@Url.Action("CreateSubject")" data-id="@id">Tárgy hozzáadása</button>

    }
    @if (Model.CurrentSemester.Subjects.Count != 0)
    {
        <div class="btn-group float-right" role="group" id="opencloseButtons">
            <button type="button" class="btn btn-primary" id="allopen">Táblák nyitása</button>
            <button type="button" class="btn btn-secondary mr-0 ml-0 pr-0 pl-0" disabled></button>
            <button type="button" class="btn btn-primary" id="allclose">Táblák zárása</button>
        </div>
        <div class="clearfix"></div>
    }
</div>
<div id="PlaceHolderHere"></div>
@Html.ValidationMessage("ReadError", new { @class = "text-danger" })
@*Collapse table*@
<div class="container-fluid pt-2" id="dropdownTable">
    @foreach (var item in Model.CurrentSemester.Subjects.Select((value, i) => new { i, value }))
    {
        bool everythingCorrect = true;
        string color = "";
        if (allTypeCheckForSubjects[item.i].Count() != 0)
        {
            color = "bg-warning";
            everythingCorrect = false;
        }
        else color = "bg-white";
