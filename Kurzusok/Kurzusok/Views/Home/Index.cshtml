                                <label>Szak: </label><input type="text" name="programme" class="form-control" placeholder="Szak" />
                            </div>
                        </div>
                    </div>
                </div>
            </li>
            <li class="nav-item pb-1 height">
                <a class="nav-link text-dark dropdown-toggle pl-1 py-0 d-inline" id="dropdownMenuSemester" data-toggle="dropdown">
                    @date
                </a>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink" role="menu">
                    @foreach (var item in Model.SemestersList)
                    {
                        if (date != item.Date)
                        {
                            <a class="text-dark nav-link" role="menuitem" tabindex="-1" asp-route-currentSemesterId="@item.Id">@item.Date</a>
                        }
                    }
                </div>
            </li>
            @if (User.IsInRole("Admin"))
