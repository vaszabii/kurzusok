                    <button type="button" class="text-dark pl-1 py-0 text-nowrap border-0" data-toggle="semester-modal" data-target="#addSemester" id="addsemester" data-url="@Url.Action("CreateSemester")" onclick="clearCollapse()">Új félév felvétele</button>
