                                                    displayComment = displayComment.Substring(0, pos) + "" + displayComment.Substring(pos + commentHelper.Length);
                                                    commentHelper = commentHelper.Substring(3, commentHelper.IndexOf("$]]") - 3);
                                                    whoCommented.Add(commentHelper);
                                                }
                                                string[] commentList = displayComment.Split('ß');
                                                whoCommented.Reverse();
                                                <div>
                                                    @{
                                                        for (int i = 0; i < commentList.Length; i++)
                                                        {
                                                            <p class="d-inline" style="word-wrap:break-word;" title="írta: @whoCommented[i]">@commentList[i]</p>
                                                        }
                                                    }
                                                </div>
                                            }
                                        }
                                    </td>
                                </tr>
                                @if (displayComment != null)
                                {
                                    <tr>
                                        <td class="border-0 py-0">
                                            <p class="smaller m-0">Utoljára szerkesztette: @whoCommented.Last()</p>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </td>
                        <td>
                            @foreach (var teacher in course.TeachersLink)
                            {
                                @Html.DisplayFor(modelItem => teacher.Teacher.Name)
                                <br />
                            }
                        </td>
                        <td>
                            @foreach (var teacher in course.TeachersLink)
                            {
                                @Html.DisplayFor(modelItem => teacher.Loads)
                                @Html.Raw(" %")
                                <br />
                            }
                        </td>
                        <td>
                            <button class="btn btn-xs" data-toggle="home-modal" data-target="#applyComment" data-url="@Url.Action("AddComment")" data-id="@course.CourseId"><span class="far fa-comment" aria-hidden="true"></span></button>
                            @if (User.IsInRole("Admin"))
                            {
                                <button class="btn btn-default btn-xs" data-toggle="home-modal" data-target="#editCourse" id="editecourse" data-url="@Url.Action("EditCourse")" data-id="@course.CourseId">
                                    <span class="far fa-edit" aria-hidden="true"></span>
                                </button>
                                <button class="btn btn-xs" data-toggle="home-modal" data-target="#applyCourseDelete" data-url="@Url.Action("DeleteCourse")" data-id="@course.CourseId" id="deletecourse"><span class="fas fa-trash-alt"></span></button>
                            }
                        </td>
                    </tr>
                }
                @if (allTypeCheckForSubjects[item.i].Count() != 0)
                {
                    <tr>
                        <td colspan="@colthespanexcel" style="color:red;">@errormessage</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

