                @foreach (var kurzus in item.value.Courses)
                {
                    if (kurzus.NeptunOk == false)
                    {
                        everythingCorrect = false;
                    }
                }
                @if (everythingCorrect)
                {
                    <div class="col-1 m-0 h5"> <span class="fa  fa-check" style="color: green !important;"></span></div>
                }
                else
                {
                    <div class="col-1 m-0 h5"> </div>

                }
                <div class="col-4 m-0 h5 border-right">  @Html.DisplayFor(modelItem => item.value.SubjectCode)</div>
