                <i class="fas fa-search"></i>
            </li>
            <li class="nav-item pb-1">
                <i class="fas fa-list-ul"></i>
            </li>
            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item pb-1">
                    <i class="fas fa-plus-square"></i>
                </li>
            }
            <li class="nav-item pb-1">
                <i class="fas fa-table"></i>
            </li>
        </ul>
    </div>
}
