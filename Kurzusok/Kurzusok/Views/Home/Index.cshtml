                    <input type="text" name="anysearch" class="form-control" placeholder="Keresés" form="anysearchform">
                    <div class="input-group-append">
                        <button type="button" class="btn btn-outline-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <div class="dropdown-menu w-100">
                            <div class="p-3">EZ MÉG KÉRDÉSES</div>
                            <div class="d-inline-block p-3">
                                <label>Tárgy: </label><input type="text" name="subject" class="form-control" placeholder="Tárgy" />
                            </div>
                            <div class="d-inline-block p-3">
                                <label>Oktató: </label><input type="text" name="teacher" class="form-control" placeholder="Oktató" />
