                int courseCount = item.Courses.Count();
                <tr class="newSubject border-bottom">
                    @if (User.IsInRole("Admin"))
                    {
                        <td rowspan="@courseCount">
                            <a class="dropdown-toggle" id="subjectdropdownMenu" data-toggle="dropdown">
                                <span class="fa fa-cog"></span>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink" role="menu">
                                <a class="btn btn-xs" data-toggle="subject-modal" data-target="#addCourse" data-url="@Url.Action("CreateCourse")" data-id="@item.SubjectId"><span class="far fa-plus-square pr-1"></span>Kurzus hozzáadás</a><br />

                                <button class=" btn btn-xs" data-toggle="subject-modal" data-target="#editSubject" id="editesubject" data-url="@Url.Action("EditSubject")" data-id="@item.SubjectId"><span class="far fa-edit pr-1"></span>Tárgy szerkesztése</button> <br />
                                <a class="btn btn-xs" data-toggle="subject-delete-modal" data-target="#applySubjectDelete" data-id="@item.SubjectId" id="deletesubject"><span class="far fa-trash-alt pr-1"></span>Tárgy törlése</a>
                            </div>
                        </td>
                    }
                    <td rowspan="@courseCount">
                        @Html.DisplayFor(modelItem => item.SubjectCode)
                    </td>
                    <td rowspan="@courseCount">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td rowspan="@courseCount">
                        @if (item.EHours != null)
                        {
                            @Html.Raw("Elmélet: ")
                            @Html.DisplayFor(modelItem => item.EHours)
                            <br />
                        }
                        @if (item.GyHours != null)
                        {
                            @Html.Raw("Gyakorlat: ")
                            @Html.DisplayFor(modelItem => item.GyHours)
                        }
                    </td>
                    <td rowspan="@courseCount">
                        @foreach (var programme in item.ProgrammesLink)
                        {
                            @Html.DisplayFor(modelItem => programme.Programme.Name)
                            <br />
                        }
                    </td>
                    @foreach (var course in item.Courses.Take(1))
                    {
                        <td class="border-left">
                            @Html.DisplayFor(modelItem => course.CourseCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => course.CourseType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => course.Members)
                            @Html.Raw("fő")
                        </td>
                        <td>
                            @if (course.Classroom != null)
                            {
                                @Html.DisplayFor(modelItem => course.Classroom)
                                if (course.Software != null)
                                {
                                    @Html.Raw(", ")
                                    @Html.DisplayFor(modelItem => course.Software)
                                }
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => course.Software)
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => course.Comment)
                        </td>
                        <td>
                            @foreach (var teacher in course.TeachersLink)
                            {
                                @Html.DisplayFor(modelItem => teacher.Teacher.Name)
                                <br />
                            }
                        </td>
                        <td>
                            @foreach (var teacher in course.TeachersLink)
                            {
                                @Html.DisplayFor(modelItem => teacher.Loads)
                                @Html.Raw(" %")
                                <br />
                            }
                        </td>
                        <td>
                            <a class="btn btn-xs" data-toggle="add-comment-modal" data-target="#applyComment" data-id="@course.CourseId"><span class="far fa-comment" aria-hidden="true"></span></a>
                            @if (User.IsInRole("Admin"))
                            {
                                <button class="btn btn-default btn-xs" data-toggle="subject-modal" data-target="#editCourse" id="editecourse" data-url="@Url.Action("EditCourse")" data-id="@course.CourseId">
                                    <span class="far fa-edit" aria-hidden="true"></span>
                                </button>
                                <a class="btn btn-xs" data-toggle="course-delete-modal" data-target="#applyCourseDelete" data-id="@course.CourseId" id="deletecourse"><span class="fas fa-trash-alt"></span></a>
                            }
                        </td>

                    }
                </tr>

                @foreach (var course in item.Courses.Skip(1))
                {
                    <tr class="border-bottom">
                        <td class="border-left">
                            @Html.DisplayFor(modelItem => course.CourseCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => course.CourseType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => course.Members)
                            @Html.Raw("fő")
                        </td>
                        <td>
                            @if (course.Classroom != null)
                            {
                                @Html.DisplayFor(modelItem => course.Classroom)
                                if (course.Software != null)
                                {
                                    @Html.Raw(", ")
                                    @Html.DisplayFor(modelItem => course.Software)
                                }
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => course.Software)
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => course.Comment)
                        </td>
                        <td>
                            @foreach (var teacher in course.TeachersLink)
                            {
                                @Html.DisplayFor(modelItem => teacher.Teacher.Name)
                                <br />
                            }
                        </td>
                        <td>
                            @foreach (var teacher in course.TeachersLink)
                            {
                                @Html.DisplayFor(modelItem => teacher.Loads)
                                @Html.Raw(" %")
                                <br />
                            }
                        </td>
                        <td>
                            <a class="btn btn-xs" data-toggle="add-comment-modal" data-target="#applyComment" data-id="@course.CourseId"><span class="far fa-comment" aria-hidden="true"></span></a>
