@*Insert komment*@
<div class="modal fade add-comment-modal" id="applyComment" tabindex="-1" role="dialog" aria-labelledby="applyComment" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="applyCommentLabel">Megjegyzés hozzáadása</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-action="AddComment" enctype="multipart/form-data">
                <div class="modal-body">
                    <input type="text" placeholder="Írjon megjegyzést a kurzushoz" autofocus name="comment" class="w-100" />
                    <input type="hidden" id="courseId" name="courseId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Bezárás</button>
                    <button type="submit" class="btn btn-danger" id="addcomment">Mentés</button>
                </div>
            </form>
        </div>
    </div>
</div>

@*Collapse table*@
<div class="container-fluid pt-2" id="dropdownTable">
    @foreach (var item in Model.CurrentSemester.Subjects)
    {
        <div class="container-fluid border border border-secondary rounded-top mt-1 shadow-sm bg-white rounded w-85">
            <div class="row accordion-toggle border-bottom border-light rounded-top align-items-center p-1" data-toggle="collapse" data-target="#@item.SubjectCode">
                <div class="col-4 m-0 h5 border-right">  @Html.DisplayFor(modelItem => item.SubjectCode)</div>
                @if (User.IsInRole("Admin"))
                {
                    <div class="col-6 m-0 h5 border-right"> @Html.DisplayFor(modelItem => item.Name)</div>
                    <div class="col-1 m-0 h5 border-right p-0" id="options">
                        <button type="button" class="btn btn-default btn-xs py-0 col-6" data-toggle="subject-modal" data-target="#editSubject" id="editesubject" data-url="@Url.Action("EditSubject")" data-id="@item.SubjectId">
                            <span class="far fa-edit"></span>
                        </button>
                        <a class="btn btn-xs py-0 col-6" data-toggle="subject-delete-modal" data-target="#applySubjectDelete" data-id="@item.SubjectId" id="deletesubject"><span class="fas fa-trash-alt"></span></a>
                    </div>
                    <div class="col-1 text-center m-0 h5"><span class="fas fa-chevron-down" id="chevronIcon"></span></div>
                }
                else
                {
                    <div class="col-6 m-0 h5"> @Html.DisplayFor(modelItem => item.Name)</div>
                    <div class="col-1 m-0 h5 p-0" id="options"></div>
                    <div class="col-1 text-center m-0 h5 border-left"><span class="fas fa-chevron-down" id="chevronIcon"></span></div>
                }
            </div>
        </div>
        <div class="collapse pt-0 px-3 pb-3 w-80 m-auto bg-light" id="@item.SubjectCode">
            <div class="row align-items-center flex-grow-1">
                <div class="col-md-6 text-center d-flex flex-column">
                    <div class="align-items-center d-flex text-center m-auto flex-grow-1">
                        <div class="pr-2">
                            Heti óraszám: meguntam a kinézettel szopást
                        </div>
                        <div>
                            @if (item.EHours != null)
                            {
                                @Html.Raw("Elmélet: ")
                                @Html.DisplayFor(modelItem => item.EHours)
                                <br />
                            }
                            @if (item.GyHours != null)
                            {
                                @Html.Raw("Gyakorlat: ")
                                @Html.DisplayFor(modelItem => item.GyHours)
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-6 text-center d-flex flex-column">
                    <div class="align-items-center h-100 d-flex text-center m-auto flex-grow-1">
                        <div class="pr-2">
                            Szakok:
                        </div>
                        <div>
                            @foreach (var programme in item.ProgrammesLink)
                            {
                                @Html.DisplayFor(modelItem => programme.Programme.Name)
                                @Html.Raw("    Típus: ")
                                @Html.DisplayFor(modelItem => programme.EducationType)
                                if (programme.Obligatory == true)
                                {
                                    @Html.Raw("Kötelező")
                                }
                                else
                                {
                                    @Html.Raw("Választható")
                                }
                                <br />
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 text-center mt-1">
                <div class="table-responsive">
                    <table class="table bg-white">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">
                                    Kurzus típus
                                </th>
                                <th scope="col">
                                    Oktató
                                </th>
                                <th scope="col">
                                    Terhelés
                                </th>
                                <th scope="col">
                                    Kurzus kód
                                </th>
                                <th scope="col">
                                    Óraszám
                                </th>
                                <th scope="col">
                                    Terem, szoftver igény
                                </th>
                                <th scope="col">
                                    Létszám
                                </th>
                                @if (User.IsInRole("Admin"))
                                {
                                    <th>
                                        <button type="button" class="btn btn-secondary" data-toggle="subject-modal" data-target="#addCourse" data-url="@Url.Action("CreateCourse")" data-id="@item.SubjectId">
                                            <span class="fa  fa-plus"></span>
                                        </button>

                                    </th>
                                }
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var course in item.Courses)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => course.CourseType)
                                    </td>
                                    <td>
                                        @foreach (var teacher in course.TeachersLink)
                                        {
                                            @Html.DisplayFor(modelItem => teacher.Teacher.Name)
                                            <br />
                                        }
                                    </td>
                                    <td>
                                        @foreach (var teacher in course.TeachersLink)
                                        {
                                            @Html.DisplayFor(modelItem => teacher.Loads)
                                            <br />
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => course.CourseCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => course.Hours)
                                    </td>

                                    <td>
                                        @if (course.Classroom != null)
                                        {
                                            @Html.DisplayFor(modelItem => course.Classroom)
                                            if (course.Software != null)
                                            {
                                                @Html.Raw(", ")
                                                @Html.DisplayFor(modelItem => course.Software)
                                            }
                                        }
                                        else
                                        {
                                            @Html.DisplayFor(modelItem => course.Software)
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => course.Members)
                                        @Html.Raw("fő")
                                    </td>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <td>
                                            <button class="btn btn-default btn-xs" data-toggle="subject-modal" data-target="#editCourse" id="editecourse" data-url="@Url.Action("EditCourse")" data-id="@course.CourseId">
                                                <span class="far fa-edit" aria-hidden="true"></span>
                                            </button>
                                            <a class="btn btn-danger" data-toggle="course-delete-modal" data-target="#applyCourseDelete" data-id="@course.CourseId" id="deletecourse"><span class="fas fa-trash-alt"></span></a>
                                        </td>
                                    }
                                </tr>
                                <tr>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        colthespan = 7;
                                    }
                                    <td colspan="@colthespan" class="text-left">Megjegyzések: @Html.DisplayFor(modelItem => course.Comment)</td>
                                    <td>
                                        <a class="btn btn-xs" data-toggle="add-comment-modal" data-target="#applyComment" data-id="@course.CourseId"><span class="far fa-comment" aria-hidden="true"></span></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@*Normal table*@
<div class="table-responsive pt-3" id="excelTable">
    <table class="table">
        <thead class="thead-light">
            <tr>
                @if (User.IsInRole("Admin"))
                {
                    <th scope="col"></th>
                }
                <th scope="col">
                    Tárgy kód
                </th>
                <th scope="col">
                    Név
                </th>
                <th scope="col">
                    Órák
                </th>
                <th scope="col">
                    Szakok
                </th>
                <th scope="col">
                    Kurzus kód
                </th>
