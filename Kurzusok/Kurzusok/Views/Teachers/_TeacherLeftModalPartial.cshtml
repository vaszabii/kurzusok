<div class="modal teacherleftmodal" id="teacherLeft" >
    <div class="modal-dialog">
        <form asp-action="TeacherLeftPost" onsubmit="return ajaxpostBasic(this);">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="leftTeacherLabel">Oktató törlése</h4>
                    <button type="button" class="close" data-dismiss="modal"><span>X</span></button>
                </div>
                <div class="modal-body">
                    A kiválasztott oktató biztosan nem tanít az egyetemen?
                    <input type="hidden" value="@Model" name="id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Mégse</button>
                    <div class="form-group">
                        <input type="submit" value="Igen, törölhető" id="save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}