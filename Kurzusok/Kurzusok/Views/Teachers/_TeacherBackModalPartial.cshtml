<div class="modal fade teacherbackmodal" id="teacherBack" >
    <div class="modal-dialog">
        <form asp-action="TeacherBackPost" onsubmit="return ajaxpostBasic(this);">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="backTeacherLabel">Oktató visszaállítása</h4>
                    <button type="button" class="close" data-dismiss="modal"><span>X</span></button>
                </div>
                <div class="modal-body">
                    A kiválasztott oktató újra az egyetem oktatója?
                    <input type="hidden" value="@Model" name="id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Nem, mégse</button>
                    <div class="form-group">
                        <input type="submit" value="Igen" id="save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}