@model Teachers
<div class="modal editteachermodal" id="editTeacher">
    <div class="modal-dialog">
        <form asp-action="EditTeacherPost" onsubmit="return ajaxpostBasic(this);">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="editTeacherLabel">Oktató adatainak szerkesztése</h4>
                    <button type="button" class="close" data-dismiss="modal"><span>X</span></button>
                </div>
                <div class="modal-body">
                    <div id="errorAlert" class="collapse">
                        <span class="text-danger" id="errormessage"></span>
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="TeacherId" />
                        <input type="hidden" asp-for="IsWorking" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Name">Név</label>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PositionId" class="control-label">Munkakör</label>
                        <select class="custom-select" asp-for="PositionId" >
                            <!option value="1" @(Model.Position.PositionName=="Egyetemi, főiskolai tanár" ? "selected" : "") >Egyetemi, főiskolai tanár</!option>
                            <!option value="2" @(Model.Position.PositionName=="Egyetemi, főiskolai docens" ? "selected" : "") >Egyetemi, főiskolai docens</!option>
                            <!option value="3" @(Model.Position.PositionName=="Adjunktus, tanársegéd, mesteroktató" ? "selected" : "") >Adjunktus, tanársegéd, mesteroktató</!option>
                            <!option value="4" @(Model.Position.PositionName=="Tanszéki mérnök" ? "selected" : "")>Tanszéki mérnök</!option>
                            <!option value="5" @(Model.Position.PositionName=="Tanári munkakörök" ? "selected" : "")>Tanári munkakörök</!option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Bezárás</button>
                    <div class="form-group">
                        <input type="submit" value="Mentés" id="save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}